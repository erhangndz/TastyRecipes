
@{
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<!doctype html>

<html>


<body>
    <!--[if lte IE 9]>
            <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="https://browsehappy.com/">upgrade your browser</a> to improve your experience and security.</p>
        <![endif]-->
    <!-- header-start -->

    <!-- header-end -->
    <!-- slider_area_start -->
    <div class="slider_area">
        <div class="single_slider  d-flex align-items-center slider_bg_1">
            <div class="container">
                <div class="row align-items-center justify-content-center">
                    <div class="col-xl-8 ">
                        <div class="slider_text text-center">
                            <div class="text">
                                <h3>
                                    Lezzetli Tarifler
                                </h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- slider_area_end -->
    <!-- recepie_area_start  -->
  @await Component.InvokeAsync("_RecipePartial")
    <!-- /recepie_area_start  -->
    <!-- recepie_videos   -->
    @await Component.InvokeAsync("_RecipeVideoPartial")
    <!--/ recepie_videos   -->
    <!-- dish_area start  -->
    @await Component.InvokeAsync("_DishPartial")
    <!--/ dish_area start  -->
    <!-- latest_trand     -->
    <div class="latest_trand_area">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="trand_info text-center">
                        <p>Yüzlerce farklı kategoride çeşitli tariflerimiz sizi bekliyor.</p>
                        <h3>En popüler tariflerimizi inceleyin</h3>
                        <a href="/Recipe/Index/" class="boxed-btn3">Tüm tarifleri gör</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--/ latest_trand     -->
    <!-- customer_feedback_area  -->
    @await Component.InvokeAsync("_FeedbackPartial")
    <!-- / customer_feedback_area  -->
    <!-- download_app_area -->
    <div class="download_app_area">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-xl-6 col-md-6">
                    <div class="download_thumb">
                        <div class="big_img">
                            <img src="~/tasty-recipes/img/video/big_1.png" alt="">
                        </div>
                        <div class="small_01">
                            <img src="~/tasty-recipes/img/video/small_sm1.png" alt="">
                        </div>
                        <div class="small_02">
                            <img src="~/tasty-recipes/img/video/sm2.png" alt="">
                        </div>
                    </div>
                </div>
                <div class="col-xl-6 col-md-6">
                    <div class="download_text">
                        <h3>
                           Tarifler için uygulamamızı indirebilirsiniz.
                        </h3>
                        <div class="download_android_apple">
                            <a class="active" href="#">
                                <div class="download_link d-flex">
                                    <i class="fa fa-apple"></i>
                                    <div class="store">
                                        <h5>iPhone için</h5>
                                        <p> App Store</p>
                                    </div>
                                </div>
                            </a>
                            <a href="#">
                                <div class="download_link d-flex">
                                    <i class="fa fa-android"></i>
                                    <div class="store">
                                        <h5>Android için</h5>
                                        <p> Play Store</p>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--/ download_app_area -->
   
</body>

</html>