@model List<EntityLayer.Concrete.Recipe>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<!-- bradcam_area  -->
<div class="bradcam_area bradcam_bg_1">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="bradcam_text text-center">
                    <h3>Tüm Tarifler</h3>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /bradcam_area  -->

    

<div class="recepie_area plus_padding">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
                {
                    
                
            <div class="col-xl-4 col-lg-4 col-md-6">
                <div class="single_recepie text-center">
                    <div class="recepie_thumb">
                        <img src="@item.Image" alt="">
                    </div>
                    <h3>@item.Title</h3>
                    <span>@item.RecipeCategory.RecipeCategoryName</span>
                    <p>Hazırlama Süresi: 30 Mins</p>
                    <a href="/Recipe/RecipeDetails/@item.RecipeID" class="line_btn">Tarifi Gör</a>
                </div>
            </div>
        }
        </div>
    </div>
</div>

}
<!-- download_app_area -->
<div class="download_app_area">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-xl-6 col-md-6">
                <div class="download_thumb">
                    <div class="big_img">
                        <img src="~/tasty-recipes/img/video/big_1.png" alt="">
                    </div>
                    <div class="small_01">
                        <img src="~/tasty-recipes/img/video/small_sm1.png" alt="">
                    </div>
                    <div class="small_02">
                        <img src="~/tasty-recipes/img/video/sm2.png" alt="">
                    </div>
                </div>
            </div>
            <div class="col-xl-6 col-md-6">
                <div class="download_text">
                    <h3>
                        Tarifler için uygulamamızı indirebilirsiniz.
                    </h3>
                    <div class="download_android_apple">
                        <a class="active" href="#">
                            <div class="download_link d-flex">
                                <i class="fa fa-apple"></i>
                                <div class="store">
                                    <h5>iPhone için</h5>
                                    <p> App Store</p>
                                </div>
                            </div>
                        </a>
                        <a href="#">
                            <div class="download_link d-flex">
                                <i class="fa fa-android"></i>
                                <div class="store">
                                    <h5>Android için</h5>
                                    <p> Play Store</p>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--/ download_app_area -->