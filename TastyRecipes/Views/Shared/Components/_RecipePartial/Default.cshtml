@model List<EntityLayer.Concrete.Recipe>

<div class="recepie_area">
    <div class="container">
        <div class="row">
             @foreach (var item in Model)
                {
            <div class="col-xl-4 col-lg-4 col-md-6">
               
                    
                <div class="single_recepie text-center">
                    <div class="recepie_thumb">
                        <img src="@item.Image" alt="">
                    </div>
                    <h3>@item.Title</h3>
                    <span>@item.RecipeCategory.RecipeCategoryName</span>
                    <p>Hazırlama Süresi: @item.TimeNeed Dk.</p>
                        <a href="/Recipe/RecipeDetails/@item.RecipeID" class="line_btn">Tarifi Gör</a>
                </div>
                
            </div>
                }
        </div>
    </div>
</div>