
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<div class="bradcam_area bradcam_bg_1">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="bradcam_text text-center">
                    <h3>Hakkımızda</h3>
                </div>
            </div>
        </div>
    </div>
</div>
@await Component.InvokeAsync("_AboutHeaderPartial")

@await Component.InvokeAsync("_RecipeVideoPartial")
<div class="download_app_area">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-xl-6 col-md-6">
                <div class="download_thumb">
                    <div class="big_img">
                        <img src="~/tasty-recipes/img/video/big_1.png" alt="">
                    </div>
                    <div class="small_01">
                        <img src="~/tasty-recipes/img/video/small_sm1.png" alt="">
                    </div>
                    <div class="small_02">
                        <img src="~/tasty-recipes/img/video/sm2.png" alt="">
                    </div>
                </div>
            </div>
            <div class="col-xl-6 col-md-6">
                <div class="download_text">
                    <h3>
                        Tarifler için uygulamamızı indirebilirsiniz.
                    </h3>
                    <div class="download_android_apple">
                        <a class="active" href="#">
                            <div class="download_link d-flex">
                                <i class="fa fa-apple"></i>
                                <div class="store">
                                    <h5>iPhone için</h5>
                                    <p> App Store</p>
                                </div>
                            </div>
                        </a>
                        <a href="#">
                            <div class="download_link d-flex">
                                <i class="fa fa-android"></i>
                                <div class="store">
                                    <h5>Android için</h5>
                                    <p> Play Store</p>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--/ download_app_area -->

<div class="latest_trand_area">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="trand_info text-center">
                    <p>Yüzlerce farklı kategoride çeşitli tariflerimiz sizi bekliyor.</p>
                    <h3>En popüler tariflerimizi inceleyin</h3>
                    <a href="/Recipe/Index/" class="boxed-btn3">Tüm tarifleri gör</a>
                </div>
            </div>
        </div>
    </div>
</div>